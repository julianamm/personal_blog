<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header id="header">
      <nav>
      <div class="nav-logo">
        <%= link_to posts_path do %>
          <div class="logo">LOGO</div>
        <% end %>
      </div>
        <div class="nav-links">
          <ul>
            <% if user_signed_in? %>
              <li><%= link_to 'New Post', new_post_path %></li>

              <% if current_user.present? %>
                <li class="nav-item title text-dark mr-4">Hi, <%= current_user.name %></li>
              <% else %>
                <li class="nav-item"><%= link_to('Sign Up', new_user_path) %></li>
                <li class="nav-item"><%= link_to('Sign Up', new_user_path) %></li>
              <% end %>
                <li class="nav-item">
                  <%= link_to session_path, method: :delete do %>
                    <div class="sign-out"></span>
                  <% end %>
                </li>

              <% else %>
                <li><%= link_to('Sign In', new_session_path) %></li>
                <li class="nav-item"><%= link_to('Sign Up', new_user_path) %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>

  <div class="container">
    <% flash.each do |type, message| %>
      <div class="alert alert-<%= type %> alert-dismissible fade show">
        <%= message %>
      </div>
    <% end %> 
    <%= yield %>
  </div>
  </body>
</html>
